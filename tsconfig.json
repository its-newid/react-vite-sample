{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext", // ESNext로 설정하여 최신 모듈 시스템 사용
        "lib": ["ES2020", "DOM", "DOM.Iterable"], // 필요한 라이브러리 추가
        "useDefineForClassFields": true,
        "skipLibCheck": true,
        "baseUrl": ".", // 경로 설정
        "paths": {
            "@/*": ["src/*"] // 경로 별칭 설정
        },
        "moduleResolution": "bundler", // 모듈 해석 방식 설정
        "allowImportingTsExtensions": true,
        "isolatedModules": true,
        "moduleDetection": "force",
        "noEmit": true, // 출력 파일 생성 안 함
        "jsx": "react-jsx", // JSX 변환 방식 설정
        "strict": true, // 엄격한 타입 검사 활성화
        "noUnusedLocals": true, // 사용하지 않는 지역 변수 경고
        "noUnusedParameters": true, // 사용하지 않는 매개변수 경고
        "noFallthroughCasesInSwitch": true // switch 문에서 fallthrough 경고
    },
    "include": ["src/**/*"], // 포함할 파일
    "exclude": ["node_modules"] // 제외할 파일
}
